@model softblocks.Models.PageLogin

@using (Html.BeginForm("Validate", "Login", FormMethod.Post))
{
    <div class="form-group">
        <label class="control-label" for="username">Username</label>
        @Html.TextBoxFor(n => n.Username, new { @class = "form-control", placeholder = "Please enter you email", required="" })
        <span class="help-block small">Your unique username to app</span>
    </div>
    <div class="form-group">
        <label class="control-label" for="password">Password</label>
        <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">
        <span class="help-block small">Your strong password</span>
    </div>
    <div>
        <button class="btn btn-accent" type="submit">Login</button>
        <a class="btn btn-default" href="register.html">Register</a>
    </div>
}

