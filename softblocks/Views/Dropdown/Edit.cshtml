@model softblocks.data.Model.Dropdown


<div class="normalheader  small-header">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="/AppModule">Apps</a></li>
                    <li><a href="/AppModule/ModuleDetails?moduleId=@ViewBag.AppId">@ViewBag.AppName</a></li>
                    <li><a href="/AppModule/ModuleDetails?moduleId=@ViewBag.AppId">Data Components</a></li>
                    <li class="active">
                        <span>@Model.Name</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                @Model.Name
            </h2>
            <small>Dropdown details</small>
        </div>
    </div>
</div>

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" id="firstName" class="form-control" placeholder="John doe" value="@Model.Name">
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Description</label>
                                <input type="text" id="txtDescription" class="form-control" placeholder="John doe" value="@Model.Description">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" id="txtItemName" class="form-control" placeholder="Dropdown name">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label">Sort</label>
                                <input type="text" id="txtItemSort" class="form-control" placeholder="Sort Order">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label" style="width:100%">&nbsp;</label>
                                <button class="btn btn-primary">Add</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped" id="tbl-dropdown" data-Dropdown-Items="@Model.Items">
                                    <thead>
                                        <tr>
                                            <th>Item Name</th>
                                            <th>Sort</th>
                                            <th>&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.Order</td>
                                                <td><i class="fa fa-trash-o"></i></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



<div class="modal fade" id="pnlAddForm" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title">Add Field</h4>
            </div>
            <div class="modal-body">
                <form id="frmAddForm">
                    <div class="form-group">
                        <label for="exampleInputName">Field</label>
                        <select id="ddField" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName">Column Width</label>
                        <select id="ddColWidth" class="form-control">
                            <option value="12">12</option>
                            <option value="11">11</option>
                            <option value="10">10</option>
                            <option value="9">9</option>
                            <option value="8">8</option>
                            <option value="7">7</option>
                            <option value="6">6</option>
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName">Order</label>
                        <input type="text" class="form-control" id="txtOrder" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info waves-effect" id="btnAdd">Add</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{}
