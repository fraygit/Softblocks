@model List<softblocks.data.Model.Dropdown>
@{
    Layout = null;
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th style="width:10px;">&nbsp;</th>
            <th style="width:10px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var dropdown in Model)
            {
                <tr>
                    <td>@dropdown.Name</td>
                    <td>@dropdown.Description</td>
                    <td><a href="/Dropdown/Edit/?id=@dropdown.Id&appId=@ViewBag.AppId"><i class="fa fa-pencil"></i></a></td>
                    <td><a href=""><i class="fa fa-trash"></i></a></td>
                </tr>
            }
        }
    </tbody>
</table>