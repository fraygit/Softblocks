@model List<softblocks.data.Model.DataPanel>
@{
    Layout = null;
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th style="width:10px;">&nbsp;</th>
            <th style="width:10px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var dataPanel in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Edit", "DataPanel", new { dataPanelId = dataPanel.Id.ToString() })">@dataPanel.Name</a></td>
                    <td>@dataPanel.Description</td>
                    <td><a href=""><i class="fa fa-pencil"></i></a></td>
                    <td><a href=""><i class="fa fa-trash"></i></a></td>
                </tr>
            }
        }
    </tbody>
</table>