@model softblocks.data.Model.ModuleForm

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Form - @Model.Name</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">UI Elements</a></li>
            <li class="active">Panels &amp; Wells</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="white-box">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" id="firstName" class="form-control" placeholder="John doe" value="@Model.Name">
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Document Type</label>
                                <input type="text" id="txtDocumentType" class="form-control" placeholder="12n">
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <span class="pull-right"><button type="button" class="btn btn-info waves-effect" id="btnAddForm" data-toggle="modal" data-target="#pnlAddForm">Add Field</button></span>
        <h3>Preview</h3>

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="panel panel-inverse">
                    <div class="panel-heading">
                        @Model.Name
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="table-responsive">
                            <div id="pnlPages">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="pnlAddForm" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title">Add Field</h4>
            </div>
            <div class="modal-body">
                <form id="frmAddForm">
                    <div class="form-group">
                        <label for="exampleInputName">Field</label>
                        <select id="ddField" class="form-control"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info waves-effect" id="btnAdd">Add</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {

            var GetDocumentTypeFields = function () {
                $.ajax({
                    type: "GET",
                    url: "@Html.Raw(Url.Action("ListFields", "DocumentTypes", new { documentId = Model.DocumentTypeId, appId = ViewBag.AppId }))",
                    contentType: "application/json",
                    dataType: "json",
                    success: function (d) {
                        $.each(d.Result, function (fieldIndex, fieldItem) {
                            $("#ddField").append($("<option></option>").attr("value", ConvertObjectId(fieldItem.Id)).text(fieldItem.Name));
                        })
                    },
                    error: function (xhr, textStatus, errorThrown) {
                    }
                });
            };


            $("#btnAdd").click(function () {
                var isValid = $("#frmAddForm").valid();
                if (isValid) {
                    var data = {
                        AppModuleId: '@ViewBag.AppId',
                        FormId: '@Model.Id',
                        FieldId: $("#ddField").val()
                    }
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("AddFormField", "ModuleForm")",
                        contentType: "application/json",
                    dataType: "json",
                    data: JSON.stringify(data),
                    success: function (d) {
                        if (d.IsSuccess == true) {
                            $("#frmAddForm")[0].reset();
                            $("#pnlAddForm").modal('toggle');
                            alertSuccess("Success", "Successfully created form field!");
                        }
                        else {
                            alertError("Error!", d.Message);
                        }
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        RemoveLoadingOverlay("#pnlPages");
                        // TODO: Show error
                    }
                });
            }
            });


            GetDocumentTypeFields();

        });
    </script>
}
