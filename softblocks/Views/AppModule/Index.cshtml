
<section class="content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-note2"></i>
                    </div>
                    <div class="header-title">
                        <h3>Modules</h3>
                    </div>
                </div>
                <hr>
            </div>
        </div>

        <div class="row">

            <div class="col-md-6" id="pblCreateOrg">
                <div id="pnlModuleList"></div>

            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            var LoadModuleList = function () {
                $("#pnlModuleList").addClass("ld-loading");
                $('#pnlModuleList').load('@Url.Action("ModuleList", "AppModule")', function () {
                    $("#pnlModuleList").removeClass("ld-loading");
                });
            }

            LoadModuleList();
        });
    </script>
}