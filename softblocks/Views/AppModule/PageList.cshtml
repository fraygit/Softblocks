@model softblocks.data.Model.AppModule
@{
    Layout = null;
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th style="width:10px;">&nbsp;</th>
            <th style="width:10px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Pages != null)
        {
            foreach (var page in Model.Pages)
            {
                <tr>
                    <td>@page.Name</td>
                    <td>@page.Description</td>
                    <td><a href="/Page/Edit?appId=@Model.Id&pageId=@page.PageId"><i class="fa fa-pencil"></i></a></td>
                    <td><a href=""><i class="fa fa-trash"></i></a></td>
                </tr>
            }
        }
    </tbody>
</table>
                        

