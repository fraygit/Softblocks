@model List<softblocks.data.Model.AppModule>
@{
    Layout = null;
}




<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th style="width:10px;">&nbsp;</th>
                                            <th style="width:10px;">&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appModule in Model)
                                        {
                                            <tr>
                                                <td><a href="@Url.Action("ModuleDetails", "AppModule", new { moduleId=appModule.Id.ToString() })">@appModule.Name</a></td>
                                                <td>@appModule.Description</td>
                                                <td><a href=""><i class="fa fa-pencil"></i></a></td>
                                                <td><a href=""><i class="fa fa-trash"></i></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

